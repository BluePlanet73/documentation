{
  "name": "calmm-tutorial",
  "private": true,
  "description": "Calm^2 Tutorial",
  "scripts": {
    "bundle": "npm run bundle:js && npm run bundle:css",
    "bundle:css": "lessc src/site/*.less > public/bundle.css",
    "bundle:js": "export NODE_ENV=production && browserify src/site/start.js -t babelify -t envify -g uglifyify > public/bundle.js",
    "lint": "eslint src test",
    "livereload:css": "node --eval \"require('livereload').createServer({exclusions: [/.js$/]}).watch('public')\"",
    "prepublish": "npm run lint && npm run test && npm run bundle",
    "start": "node src/server/start.js",
    "test": "node_modules/mocha/bin/mocha",
    "watch": "npm run watch:server & npm run watch:js & npm run watch:css & npm run livereload:css & wait",
    "watch:css": "npm run bundle:css && watch-run -p 'src/site/**/*.less' 'npm run bundle:css'",
    "watch:js": "watchify src/site/start.js -v -t [ babelify --sourceMaps=inline ] -g envify -p livereactload -o public/bundle.js",
    "watch:server": "nodemon -e js --watch app --ignore src/site src/server/start.js"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "express": "^4.13.4",
    "kefir": "^3.2.1",
    "kefir.atom": "^2.0.0",
    "kefir.react.html": "^2.0.0",
    "partial.lenses": "^2.0.0",
    "ramda": "^0.20.1",
    "react": "^0.14.8",
    "react-dom": "^0.14.8",
    "serve-static": "^1.10.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.7.4",
    "babel-plugin-transform-react-constant-elements": "^6.5.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "eslint": "^2.6.0",
    "eslint-plugin-react": "^4.2.3",
    "less": "^2.6.1",
    "livereactload": "^2.2.2",
    "livereload": "^0.4.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "uglifyify": "^3.0.1",
    "watch-run": "^1.2.4",
    "watchify": "^3.7.0"
  }
}
